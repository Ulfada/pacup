#!/bin/sh

SCRIPT_DIR="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"

source $SCRIPT_DIR/../lib/utility/util.sh
SCRIPT_DIR="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"

SUBCMD=$1

case $SUBCMD in
    list)
        shift
        $SCRIPT_DIR/../lib/list.sh "$@"
        exit
        ;;
    config-match)
        shift
        $SCRIPT_DIR/../lib/config-match.py "$@"
        exit
        ;;
    install)
        shift
        $SCRIPT_DIR/../lib/install.sh "$@"
        exit
        ;;
    -h|-\?|--help)
        showhelp
        exit
        ;;
    "")
        showhelp
        exit 1
        ;;
    *)
        wrong_subcommand $SUBCMD
        exit 1
esac
